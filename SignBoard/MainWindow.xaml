<Window x:Class="SignBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" BorderBrush="#FFE41B1B" Foreground="White" Closing="Window_Closing">

    <Grid>
        
        <Border BorderBrush="Blue" BorderThickness="5" Margin="0,0,455,255">
            <Image x:Name="imgBill" HorizontalAlignment="Left" Height="64" Margin="-5" VerticalAlignment="Top" Width="64"  Stretch="Fill" Source="images/test.png"/>
        </Border>
        
        <InkCanvas >
            <InkCanvas.Background>
                <ImageBrush ImageSource="{Binding ElementName=imgBill,Path=Source}"></ImageBrush>
            </InkCanvas.Background>
        </InkCanvas>

        <Button HorizontalAlignment="Left" Margin="431,10,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name="btnClean" Content="Clean" Width="74" Click="btnClean_Click"/>
        </Button>
        
    </Grid>
</Window>
